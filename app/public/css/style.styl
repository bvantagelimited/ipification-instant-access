@import url('https://rsms.me/inter/inter.css');
body * { font-family: 'Inter', sans-serif; }


body 
	margin  0
	padding  0
	background white

#login{
	
	.app-logo{
		display: flex;
		justify-content: center;
		text-align: center;
		height: 266px;
		background: #F8F8FF 0% 0% no-repeat padding-box;
		padding-top: 76px;

		img{
			width: 142px;
			height: 190px;
		}
	
	}

	.app-name{
		padding-left: 36px;
		padding-top: 36px;

		.short-title{
			font-size: 16px;
			color: #6D6D6D;
		}

		.title{
			font-size: 26px;
			font-weight: bold;
			text-transform: none;
		}
	}
	
}

.btn-block{
	width: 100%;
	padding: 0px 36px;
	position: absolute;
	bottom: 36px;
	left: 0;

	
	.btn-login {
		width: 100%;
		border-radius: 3px;
		font-size: 16px;
		font-weight: 500;
		letter-spacing: 0.1em;
		height: 54px;
		border:none;
		padding: 10px 30px 10px 30px;
		color: #ffffff;
		background: linear-gradient(-45deg, transparent 10px, #007AFF 10px);  
		cursor: pointer;

		&:focus{
			outline: none;
			-webkit-box-shadow: none;
			box-shadow: none;
		}
		
		

	}

	.footer-block{
		font-size: 14px;
		text-align: center;
		margin-top: 36px;
		color: #B1B1B1;
	}
}

.result-container{

	.user-logo{
		position: relative;
		background-color: #F8F8FF;
		text-align: center;
		width: 100%;

		img{
			padding: 50px 0;
		}
	}

	.user-info{
		width: 100%;
		padding: 35px;
	}

	.short-title{
		color: #6D6D6D;
		font-size: 16px;
	}
	.phone-title{
		color: #BCBCBC;
		font-size: 16px;
		margin-top: 36px;
	}

	.user-phone{
		padding: 5px 0px;
		border-bottom: 1px solid #B7B7B7;
		background-image: url(../images/valid.svg);
		background-repeat: no-repeat;
		background-position: right;
		color: #000000;
	}

	.btn-done {
		width: 100%;
		border-radius: 3px;
		font-size: 16px;
		font-weight: 500;
		letter-spacing: 0.1em;
		height: 54px;
		border: 1px solid #007AFF;
		padding: 10px 30px 10px 30px;
		color: #007AFF;
		background: white; 
		margin-top: 80px; 

		&:focus{
			outline: none;
			-webkit-box-shadow: none;
			box-shadow: none;
		}

	}
}

@media (max-width: 768px) {
	#login {
		.form-login{
			width:95%;
		}
	}

	.container{
		padding: 0px;
	}
}
@media (min-width: 768px) {
	#login {
		width: 100%;
	}

	.container{
		max-width: 390px;
		height: 100vh;
		position: relative;
	}

	body {
		height  100vh
	}
}

@media (max-width: 768px) {

	.user-logo {
		img{
			max-height: 175px;
		}
	}

	.result-container{
		width: 100%;
	}
}
@media (min-width: 768px) {
	
	.result-container{
		width: 360px;
	}
	
}
